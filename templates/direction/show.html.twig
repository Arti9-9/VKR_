{% extends 'base.html.twig' %}

{% block title %}Direction{% endblock %}

{% block body %}
    {{ include('component/navbar.html.twig') }}
    <h1>Direction</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ direction.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ direction.Name }}</td>
        </tr>
        </tbody>
    </table>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_direction_index') }}">Назад</a>

        <a href="{{ path('app_direction_edit', {'id': direction.id}) }}">Редактировать</a>
        {{ include('direction/_delete_form.html.twig') }}
    {% else %}
        <a href="{{ path('app_direction_user_index', {'user' : app.user}) }}">Назад</a>
    {% endif %}

{% endblock %}
