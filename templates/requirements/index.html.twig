{% extends 'base.html.twig' %}

{% block title %}Requirements index{% endblock %}

{% block body %}
    <h1>Requirements index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NameEquipment</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for requirement in requirements %}
            <tr>
                <td>{{ requirement.id }}</td>
                <td>{{ requirement.nameEquipment }}</td>
                <td>
                    <a href="{{ path('app_requirements_show', {'id': requirement.id}) }}">show</a>
                    <a href="{{ path('app_requirements_edit', {'id': requirement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_requirements_new') }}">Create new</a>
{% endblock %}
