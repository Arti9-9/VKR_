{% extends 'base.html.twig' %}

{% block title %}{{ requirement.nameEquipment }}{% endblock %}

{% block body %}
    {{ include('component/navbar.html.twig') }}
    <h1>{{ requirement.nameEquipment }}</h1>
    <h3> Атрибуты:</h3>
    <ul>
        {% for attribute in attributes %}
            <li>
                <div class="container-fluid">
                    <a class="text-black" href="{{ path('app_atributes_for_requirement_edit', {'id' : attribute.id, 'requirement' : requirement.id}) }}">{{ attribute.name }} {{ attribute.value }}
                    {% if attribute.unit %}
                        {{ attribute.unit }}
                    {% endif %}
                    </a>

                </div>
            </li>
        {% else %}
            нет атрибутов
        {% endfor %}
    </ul>
    <a href="{{ path('app_requirement_new_attributes', {'requirements' : requirement.id}) }}">Добавить атрибуты</a>
    <a href="{{ path('app_requirements_index') }}">Назад</a>

    <a href="{{ path('app_requirements_edit', {'id': requirement.id}) }}">Изменить</a>

    {{ include('requirements/_delete_form.html.twig') }}
{% endblock %}
